---
import { cvData } from '../data/cv';
---

<section id="about" class="about">
  <div class="container">
    <h2>Sobre mí</h2>
    <div class="about-content">
      <div class="about-text">
        <p>{cvData.personal.summary}</p>
      </div>
      <div class="about-info">
        <div class="info-item">
          <strong>Ubicación:</strong>
          <span>{cvData.personal.location}</span>
        </div>
        <div class="info-item">
          <strong>Email:</strong>
          <a href={`mailto:${cvData.personal.email}`}>{cvData.personal.email}</a>
        </div>
        {cvData.personal.phone && (
          <div class="info-item">
            <strong>Teléfono:</strong>
            <a href={`tel:${cvData.personal.phone}`}>{cvData.personal.phone}</a>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: transparent;
    position: relative;
  }

  .about h2 {
    text-align: center;
    margin-bottom: var(--spacing-lg);
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--spacing-lg);
    max-width: 900px;
    margin: 0 auto;
  }

  .about-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text-light);
  }

  .about-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    padding: var(--spacing-sm);
    background-color: var(--color-bg-card);
    border-radius: var(--border-radius-sm);
    border: 1px solid var(--color-border-light);
    transition: all 0.3s ease;
  }

  .info-item:hover {
    border-color: var(--color-border-green);
    box-shadow: var(--shadow), 0 0 15px rgba(45, 134, 89, 0.2);
    transform: translateX(5px);
    background-color: var(--color-bg-card-hover);
  }

  .info-item strong {
    color: var(--color-primary);
    font-weight: 600;
  }

  .info-item a {
    color: var(--color-text);
    transition: color 0.3s ease;
  }

  .info-item a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
    }
  }
</style>

