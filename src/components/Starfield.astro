---
// Componente de fondo estrellado animado
---

<div class="starfield">
  <div class="stars"></div>
  <div class="stars2"></div>
  <div class="stars3"></div>
  <div class="constellation"></div>
  <div class="nebula"></div>
</div>

<style>
  .starfield {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: linear-gradient(180deg, #000000 0%, #0a0a0a 30%, #050505 60%, #000000 100%);
    overflow: hidden;
  }

  /* Capa base de estrellas */
  .stars,
  .stars2,
  .stars3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
  }

  .stars {
    background-image: 
      radial-gradient(2px 2px at 20px 30px, #2d8659, transparent),
      radial-gradient(1px 1px at 60px 70px, rgba(45, 134, 89, 0.8), transparent),
      radial-gradient(1px 1px at 50px 50px, #4a9d75, transparent),
      radial-gradient(2px 2px at 80px 10px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(1px 1px at 90px 40px, #2d8659, transparent),
      radial-gradient(2px 2px at 33px 90px, rgba(45, 134, 89, 0.7), transparent),
      radial-gradient(1px 1px at 70px 20px, #4a9d75, transparent),
      radial-gradient(2px 2px at 40px 60px, rgba(45, 134, 89, 0.5), transparent),
      radial-gradient(1px 1px at 10px 80px, #2d8659, transparent),
      radial-gradient(2px 2px at 100px 50px, rgba(45, 134, 89, 0.8), transparent),
      radial-gradient(1px 1px at 120px 15px, #4a9d75, transparent),
      radial-gradient(2px 2px at 150px 85px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(1px 1px at 180px 25px, #2d8659, transparent),
      radial-gradient(2px 2px at 200px 65px, rgba(45, 134, 89, 0.7), transparent);
    background-repeat: repeat;
    background-size: 250px 120px;
    animation: sparkle 3s linear infinite, twinkle 4s ease-in-out infinite;
    opacity: 0.9;
  }

  .stars2 {
    background-image: 
      radial-gradient(1px 1px at 15px 25px, #4a9d75, transparent),
      radial-gradient(2px 2px at 55px 65px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(1px 1px at 45px 45px, #2d8659, transparent),
      radial-gradient(1px 1px at 75px 5px, rgba(45, 134, 89, 0.7), transparent),
      radial-gradient(2px 2px at 85px 35px, #4a9d75, transparent),
      radial-gradient(1px 1px at 28px 85px, rgba(45, 134, 89, 0.5), transparent),
      radial-gradient(2px 2px at 65px 15px, #2d8659, transparent),
      radial-gradient(1px 1px at 35px 55px, rgba(45, 134, 89, 0.8), transparent),
      radial-gradient(2px 2px at 5px 75px, #4a9d75, transparent),
      radial-gradient(1px 1px at 95px 45px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(2px 2px at 130px 20px, #2d8659, transparent),
      radial-gradient(1px 1px at 160px 70px, rgba(45, 134, 89, 0.7), transparent);
    background-repeat: repeat;
    background-size: 200px 100px;
    animation: sparkle 4s linear infinite reverse, twinkle 5s ease-in-out infinite;
    opacity: 0.7;
  }

  .stars3 {
    background-image: 
      radial-gradient(1px 1px at 25px 35px, rgba(45, 134, 89, 0.4), transparent),
      radial-gradient(2px 2px at 65px 75px, #2d8659, transparent),
      radial-gradient(1px 1px at 55px 55px, rgba(45, 134, 89, 0.5), transparent),
      radial-gradient(1px 1px at 85px 15px, #4a9d75, transparent),
      radial-gradient(2px 2px at 95px 45px, rgba(45, 134, 89, 0.7), transparent),
      radial-gradient(1px 1px at 38px 95px, #2d8659, transparent),
      radial-gradient(1px 1px at 75px 25px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(2px 2px at 45px 65px, #4a9d75, transparent),
      radial-gradient(1px 1px at 15px 85px, rgba(45, 134, 89, 0.5), transparent),
      radial-gradient(1px 1px at 105px 55px, #2d8659, transparent),
      radial-gradient(2px 2px at 140px 30px, rgba(45, 134, 89, 0.6), transparent),
      radial-gradient(1px 1px at 170px 80px, #4a9d75, transparent);
    background-repeat: repeat;
    background-size: 200px 100px;
    animation: sparkle 5s linear infinite, twinkle 6s ease-in-out infinite;
    opacity: 0.5;
  }

  @keyframes sparkle {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(-100px);
    }
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 1;
    }
  }

  /* Constelaciones */
  .constellation {
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(90deg, transparent 0%, rgba(45, 134, 89, 0.1) 50%, transparent 100%),
      linear-gradient(0deg, transparent 0%, rgba(45, 134, 89, 0.1) 50%, transparent 100%);
    background-size: 400px 300px, 300px 400px;
    background-position: 20% 30%, 70% 60%;
    animation: constellationMove 20s ease-in-out infinite;
    opacity: 0.3;
  }

  @keyframes constellationMove {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.2;
    }
    50% {
      transform: translate(50px, -30px) scale(1.1);
      opacity: 0.4;
    }
  }

  /* Nebulosa */
  .nebula {
    position: absolute;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(ellipse at 20% 30%, rgba(45, 134, 89, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 70%, rgba(45, 134, 89, 0.1) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 50%, rgba(45, 134, 89, 0.08) 0%, transparent 60%);
    animation: nebulaPulse 15s ease-in-out infinite;
    filter: blur(40px);
  }

  @keyframes nebulaPulse {
    0%, 100% {
      transform: scale(1) rotate(0deg);
      opacity: 0.5;
    }
    33% {
      transform: scale(1.2) rotate(5deg);
      opacity: 0.8;
    }
    66% {
      transform: scale(0.9) rotate(-5deg);
      opacity: 0.6;
    }
  }

  /* Efectos de brillo adicionales */
  .starfield::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 30% 20%, rgba(45, 134, 89, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 80%, rgba(45, 134, 89, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(45, 134, 89, 0.05) 0%, transparent 60%);
    animation: glowPulse 8s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>
